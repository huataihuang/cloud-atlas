jail -cm \
    name=ldev \
    host.hostname="ldev.cloud-atlas.dev" \
    path="/zdata/jails/containers/ldev" \
    interface="igc0" \
    ip4.addr="192.168.7.253" \
    exec.start="/bin/sh /etc/rc" \
    exec.stop="/bin/sh /etc/rc.shutdown" \
    mount.devfs \
    devfs_ruleset=4 \
    allow.mount \
    allow.mount.devfs \
    allow.mount.fdescfs \
    allow.mount.procfs \
    allow.mount.linprocfs \
    allow.mount.linsysfs \
    allow.mount.tmpfs \
    enforce_statfs=1
