docker run -d \
  --name ubuntu-base \
  --hostname ubuntu-base \
  -p 8080:8080 \
  -p 8443:8443 \
  -p 9000:9000 \
  --user 1000:1000 \
  --userns keep-id \
  -e LANG=C.UTF-8 \
  --workdir /workspace \
  -v /home/admin/docs:/workspace \
  -v admin_home_data:/home/admin \
  -v /home/admin/.ssh:/home/admin/.ssh \
  --cap-add SYS_PTRACE \
  --security-opt seccomp=unconfined \
  localhost/ubuntu-base \
  sh -c "sleep infinity"
