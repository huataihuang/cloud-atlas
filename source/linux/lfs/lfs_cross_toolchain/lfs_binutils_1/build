cd $LFS/sources

source lfs_vers

tar xf binutils-${binutils_ver}.tar.xz

cd binutils-${binutils_ver}
mkdir -v build
cd build

../configure --prefix=$LFS/tools \
             --with-sysroot=$LFS \
             --target=$LFS_TGT   \
             --disable-nls       \
             --enable-gprofng=no \
             --disable-werror    \
             --enable-new-dtags  \
             --enable-default-hash-style=gnu

make
make install
