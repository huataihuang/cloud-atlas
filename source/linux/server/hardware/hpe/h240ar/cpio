# 安装必要的解压工具
sudo apt update
sudo apt install rpm2cpio cpio

# 解压下载的rpm文件
mkdir hpe_fw_temp && cd hpe_fw_temp
rpm2cpio ../firmware-smartarray-ea3138d8e8-7.20-1.1.x86_64.rpm | cpio -idmv

# 查找安装脚本的位置
find . -name "setup"
# 或者查找 .scexe 文件
find . -name "*.scexe"

# 进入找到的目录（请替换为实际路径）
cd ./usr/lib/x86_64-linux-gnu/firmware-smartarray-ea3138d8e8-7.20-1.1/

# 赋予执行权限并运行
sudo chmod +x setup
sudo ./setup
