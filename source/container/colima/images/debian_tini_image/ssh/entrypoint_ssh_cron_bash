#!/usr/bin/env bash

sshd() {
    chown -R admin:admin /home/admin
    /usr/sbin/sshd
}

crond() {
    /usr/sbin/cron
}

main() {
    sshd
    crond
    # 在k8s不能直接bash执行结束，否则判断为pod Crash，需要改写成持续执行循环脚本
    #/bin/bash
    /bin/bash -c "while true; do (echo 'Hello from tini'; date; sleep 120); done"
}

main
