{
    "name": "Alpine-Fullstack-Dev-Compose",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "dev-env",
    "workspaceFolder": "/workspace",
    
    "remoteUser": "admin",
    
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                // Go Path setup
                "go.gopath": "/home/admin/go",
                // Rust Path setup
                "rust-analyzer.cargo.targetDir": true
            },
            "extensions": [
                "ms-vscode.cpptools",
                "golang.go",
                "ms-python.python",
                "rust-lang.rust-analyzer",
                "dbaeumer.vscode-eslint"
            ]
        }
    },

    // exec command after container be created (option)
    "postCreateCommand": "doas chown -R admin:admin /workspace"
}
